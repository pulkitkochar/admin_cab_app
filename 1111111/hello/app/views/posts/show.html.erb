<p id="notice"><%= notice %></p>

<p>
  <b>User ID:</b>
  <%= @post.user_id %>
</p>

<p>
  <b>title:</b>
  <%= @post.title %>
</p>

<p>
  <b>body:</b>
  <%= @post.body %>
</p>

<div>
  <b>time of post:</b>
  <%=  @post.time %>
</div>


<h2>Comments</h2>
<% @post.comments.each do |comment| %>
    <p>
      <b>Commenter:</b>
      <%= comment.commenter %>
    </p>

    <p>
      <b>Comment:</b>
      <%= comment.body %>
    </p>
<% end %>


<h2>Add a comment:</h2>
<%= form_for([@post, @comments]) do |f| %>
    <div class="field">
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter %>
    </div>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
